# Written Realms Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
POSTGRES_DB=wrealms
POSTGRES_USER=django
POSTGRES_PASSWORD=your_secure_database_password_here

# Django Configuration
DJANGO_SECRET_KEY=your_django_secret_key_here_min_50_chars
DJANGO_SETTINGS_MODULE=backend.config.settings.container

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_50_chars

# AWS Configuration (for backups)
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=your_s3_bucket_name_here

# Sentry/Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# Email Configuration (optional)
MONITORING_EMAIL=your_email@example.com
SYSTEM_EMAIL_FROM=noreply@example.com

# Frontend API URLs
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_API_URL=http://localhost:8000
